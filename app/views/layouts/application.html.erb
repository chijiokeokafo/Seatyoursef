<!DOCTYPE html>
<html>
<head>
  <title>Seat Yourself</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>

</head>
<body>

  <%= yield %>


  <p><%= link_to " Home ", restaurants_path %></p>

  <p class="userinfo">
    <% if current_user %>
        Signed in as <%= current_user.first_name %> <%= current_user.last_name %> | <%= link_to "Log out", session_path("current"), :method => :delete %>
      <% else %>
    <%= link_to "Log in", new_session_path %> or <%= link_to "Sign up", new_user_path %>
    <% end %>
  </p>

</body>
</html>