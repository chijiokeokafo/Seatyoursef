<!DOCTYPE html>
<html>
<head>
  <title>Seatyourself</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>

</head>
<body>

<p class="userinfo">
    <% if current_user %>
        Signed in as <%= current_user.first_name %>. <%= link_to "Log out", session_path("current"), :method => :delete %>
      <% else %>
		<%= link_to "Log in", restaurants_path %> or <%= link_to "Sign up", restaurants_path %>
    <% end %>
</p>


	<%= yield %>


	<p><%= link_to "| Home |", restaurants_path %></p>

</body>
</html>
