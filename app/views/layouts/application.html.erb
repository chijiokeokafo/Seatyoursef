<!DOCTYPE html>
<html>
<head>
  <title>Seat Yourself</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>

</head>
<body class="<%= controller_name %> <%= action_name %>">

  <header>
    <img class="logo" src="/assets/noun_63079_cc.png" alt="">
  </header>

  <p class="userinfo">
    <% if current_user %>
      Signed in as <%= current_user.first_name %> <%= current_user.last_name %> | 
      <%= link_to "Log out", session_path("current"), :method => :delete %>
    <% else %>
		  <%= link_to "Log in", new_session_path %> or <%= link_to "Sign up", new_user_path %>
    <% end %>
  </p>
  
  <% if flash[:alert] %>
    <div class="alert alert-danger">
      <%= flash[:alert] %>
    </div>
  <% end %>

  

  <%= yield %>

</body>
</html>