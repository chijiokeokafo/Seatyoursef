<table>
	<tr>
		<td>
			<h1><%= @restaurant.name %></h1><br>
			<% if current_user == @restaurant.user %>
			   <%= link_to "| Edit ", edit_restaurant_path(@restaurant) %> 
			   <%= link_to "| Delete |", restaurant_path(@restaurant), method: :delete %><br>
		  <% end %>

			Capacity <%= @restaurant.capacity%><br>
			Opening Hours 6pm - 11pm

			<% if current_user %>
			 	<h3>"Make a Reservation"</h3>
				
				<%= form_for ([@restaurant, @reservation]) do |f| %>
				<p><div class="field">
    				<%= f.label :date %><br/>
    				<%= f.datetime_select :date, discard_minute: true %>
    				</div>

            <div class="field">
            <%= f.label :reservation_time %><br/>
            <%= f.text_field :reservation_time %>
            </div>

				<p><div class="field">
    		<%= f.label :party_size %><br/>
    		<%= f.text_field :party_size %>
  			</div></p>

  			<div class="actions">
			  <%= f.submit class: "btn btn-submit"%>      
  			</div>
				<% end %>
		<% else %>
				<p>Please sign up or log in to make a reservation.</p> 
			<% end %>
		</td>
	</tr>
</table>	